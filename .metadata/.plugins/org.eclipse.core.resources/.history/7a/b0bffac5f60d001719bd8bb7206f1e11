#include <iostream>
#include "Gpio.h"
using namespace std;

Gpio* gpio;
int main() {
	gpio = new Gpio(67);
	cout << "First GPIO exported" << endl;
	gpio->setDirection(Gpio::in);
	cout << "Dir: " << gpio->getDirection() <<  endl;

	return 0;
}
