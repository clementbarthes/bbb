#include <iostream>
using namespace std;
#include "mraa.hpp"
#include "Adxl345I2C.h"

mraa::I2c* i2c; // Create an I2C object
Adxl345I2C* accel;


int main() {
	i2c = new mraa::I2c(2,true); // Assign bus 1 to the I2c object
	accel = new Adxl345I2C(i2c);

	for(;;){
		cout << "X: " << accel->readAccel(Adxl345I2C::accelX) << "g   "
				<< endl;
	}
	return 0;
}
